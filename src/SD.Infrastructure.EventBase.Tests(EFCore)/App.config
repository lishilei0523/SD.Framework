<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <!--连接字符串配置节点-->
    <section name="connectionStrings" type="System.Configuration.ConnectionStringsSection, System.Configuration.ConfigurationManager" />
    <!--SD.Framework配置节点-->
    <section name="sd.framework" type="SD.Infrastructure.FrameworkSection, SD.Infrastructure" />
    <!--SD.IOC配置节点-->
    <section name="sd.ioc" type="SD.IOC.Core.DependencyInjectionSection, SD.IOC.Core" />
    <!--SD.Toolkits.Redis配置节点-->
    <section name="sd.toolkits.redis" type="SD.Toolkits.RedisSection, SD.Toolkits.Redis" />
  </configSections>

  <!--连接字符串-->
  <connectionStrings>
    <!--SQL Server连接字符串-->
    <add name="DefaultConnection" connectionString="Data Source=.;Initial Catalog=SD.Infrastructure.EventTests(EFCore);User Id=sa;Password=broadmall123!;MultipleActiveResultSets=true;" />
  </connectionStrings>

  <!--SD.Framework配置-->
  <sd.framework>
    <!--数据库读连接名称-->
    <database.read.connectionName>DefaultConnection</database.read.connectionName>
    <!--数据库写连接名称-->
    <database.write.connectionName>DefaultConnection</database.write.connectionName>
    <!--实体所在程序集-->
    <entity.assembly>SD.Infrastructure.EventBase.Tests</entity.assembly>
    <!--实体配置所在程序集-->
    <entity.config.assembly>SD.Infrastructure.EventBase.Tests</entity.config.assembly>
  </sd.framework>

  <!--SD.IOC配置-->
  <sd.ioc>
    <!--As接口程序集列表-->
    <asInterfaceAssemblies>
      <assembly name="SD.Infrastructure.EventBase.Tests" />
    </asInterfaceAssemblies>
    <!--As自身程序集列表-->
    <asSelfAssemblies>
      <assembly name="SD.Infrastructure.EventBase.Tests" />
    </asSelfAssemblies>
    <!--As接口类型列表-->
    <asInterfaceTypes>
      <type name="SD.Infrastructure.EventStoreProvider.RedisStoreProvider" assembly="SD.Infrastructure.EventStore.Redis" />
      <type name="SD.Infrastructure.Repository.EntityFrameworkCore.DbCleaner" assembly="SD.Infrastructure.Repository.EntityFrameworkCore" />
    </asInterfaceTypes>
    <!--As基类类型列表-->
    <asBaseTypes>
      <type name="SD.Infrastructure.EventBase.Tests.Repositories.Base.DbSession" assembly="SD.Infrastructure.EventBase.Tests" />
    </asBaseTypes>
  </sd.ioc>

  <!--SD.Toolkits.Redis配置-->
  <sd.toolkits.redis password="">
    <!--服务器地址列表-->
    <endpoints>
      <endpoint name="" host="localhost" port="6379" />
    </endpoints>
  </sd.toolkits.redis>

  <!--事务配置-->
  <system.transactions>
    <defaultSettings timeout="00:10:00" />
  </system.transactions>
</configuration>
