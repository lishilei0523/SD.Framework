  </PropertyGroup>

  <ItemGroup Condition="$(TargetFramework.Equals('net462'))">
    <PackageReference Include="SD.IOC.Extension.NetFramework" Version="1.2.2" />
  </ItemGroup>

  <ItemGroup Condition="$(TargetFramework.Equals('net6.0')) Or $(TargetFramework.Equals('net8.0'))">
